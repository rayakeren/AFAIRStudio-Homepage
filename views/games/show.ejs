<% const pageTitle=game.title; %>
    <%- include('../partials/header') %>

        <div id="game-data" data-demo-mobile-compatible="<%= game.demoMobileCompatible %>"></div>

        <!-- Game Banner with Background Image -->
        <section
            class="relative h-[calc(100svh-130px)] bg-cover bg-center flex items-center justify-center overflow-hidden"
            style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('<%= game.bannerImage %>');">
            <div class="relative z-10 text-center flex flex-col justify-between h-full w-full py-8 md:py-20">
                <!-- Logo - Adaptive sizing -->
                <div class="flex justify-center items-center flex-1 min-h-0 w-full mb-8">
                    <% if (game.logoImage && !game.logoImage.includes('placeholder')) { %>
                        <div class="relative w-full max-w-[800px] h-full px-8">
                            <div class="absolute inset-0 flex items-center justify-center z-0">
                                <div class="text-6xl opacity-30">üéÆ</div>
                            </div>
                            <img src="<%= game.logoImage %>" alt="<%= game.title %> Logo"
                                class="w-full h-full object-contain drop-shadow-2xl hover:scale-105 transition-transform duration-500 relative z-10"
                                onerror="this.style.display='none'"
                                onload="this.previousElementSibling.style.display='none'">
                        </div>
                        <% } else { %>
                            <div class="inline-block bg-black/20 backdrop-blur-sm p-8 rounded-lg">
                                <h1 class="text-7xl md:text-8xl font-bold text-white tracking-wide"
                                    style="text-shadow: 4px 4px 15px rgba(0,0,0,0.9);">
                                    <%= game.title %>
                                </h1>
                            </div>
                            <% } %>
                </div>

                <!-- Buy Button - Anchored at Bottom -->
                <div class="relative z-20 flex-shrink-0 mt-auto pb-4">
                    <button onclick="openPlatformModal()"
                        class="bg-brand-gold hover:bg-white text-black font-bold px-12 py-4 text-lg uppercase tracking-wide transition-all duration-300 transform hover:scale-105">
                        Buy Now
                    </button>
                </div>
            </div>
        </section>

        <!-- Section Navigation -->
        <nav id="section-nav" class="sticky top-0 z-40 bg-black border-b border-gray-800">
            <div class="container mx-auto px-4">
                <div class="flex justify-start md:justify-center space-x-4 md:space-x-10 overflow-x-auto">
                    <% if (game.hasDemo) { %>
                        <a href="#demo"
                            class="section-nav-link py-4 text-gray-400 hover:text-brand-gold uppercase text-sm tracking-widest font-bold whitespace-nowrap transition-colors">Demo</a>
                        <% } %>
                            <a href="#about"
                                class="section-nav-link py-4 text-gray-400 hover:text-brand-gold uppercase text-sm tracking-widest font-bold whitespace-nowrap transition-colors">About</a>
                            <a href="#media"
                                class="section-nav-link py-4 text-gray-400 hover:text-brand-gold uppercase text-sm tracking-widest font-bold whitespace-nowrap transition-colors">Media</a>
                            <a href="#features"
                                class="section-nav-link py-4 text-gray-400 hover:text-brand-gold uppercase text-sm tracking-widest font-bold whitespace-nowrap transition-colors">Features</a>
                            <a href="#extras"
                                class="section-nav-link py-4 text-gray-400 hover:text-brand-gold uppercase text-sm tracking-widest font-bold whitespace-nowrap transition-colors">Extras</a>
                            <a href="#details"
                                class="section-nav-link py-4 text-gray-400 hover:text-brand-gold uppercase text-sm tracking-widest font-bold whitespace-nowrap transition-colors">Details</a>
                </div>
            </div>
        </nav>

        <!-- Demo Section (if available) -->
        <% if (game.hasDemo) { %>
            <section id="demo" class="py-20 bg-black demo-section">
                <div class="container mx-auto px-4">
                    <div class="max-w-6xl mx-auto">
                        <h2 class="text-5xl font-bold text-brand-gold mb-10 tracking-wide uppercase">
                            Playable Demo
                        </h2>
                        <div class="game-iframe-container mb-4">
                            <iframe src="<%= game.demoEmbed %>" frameborder="0" allowfullscreen
                                title="<%= game.title %> Demo"></iframe>
                        </div>
                        <p class="text-center text-gray-500 text-sm tracking-wider mt-4">
                            POWERED BY ITCH.IO
                        </p>
                    </div>
                </div>
            </section>
            <% } %>

                <!-- About Section -->
                <section id="about" class="py-20 bg-gray-900">
                    <div class="container mx-auto px-4">
                        <div class="max-w-7xl mx-auto">
                            <h2 class="text-5xl font-bold text-brand-gold mb-10 tracking-wide uppercase">
                                About The Game
                            </h2>
                            <div class="grid md:grid-cols-2 gap-12 items-start">
                                <div>
                                    <p class="text-gray-300 leading-relaxed text-lg mb-10">
                                        <%= game.sections.about %>
                                    </p>

                                    <h3 class="text-2xl font-bold text-white mb-6 tracking-wide uppercase">
                                        Available For:
                                    </h3>
                                    <div class="flex gap-4 flex-wrap">
                                        <% game.platforms.forEach(platform=> { %>
                                            <a href="<%= platform.url %>" target="_blank"
                                                class="flex items-center gap-3 px-6 py-3 bg-gray-800 hover:bg-brand-purple border-2 border-gray-700 hover:border-brand-gold text-white font-bold transition-all duration-300 group">
                                                <% if (platform.name==='Steam' ) { %>
                                                    <%- getIcon('steam', 'w-6 h-6 fill-current group-hover:text-brand-gold transition-colors'
                                                        ) %>
                                                        <% } else if (platform.name==='itch.io' ) { %>
                                                            <%- getIcon('itch', 'w-6 h-6 fill-current group-hover:text-brand-gold transition-colors'
                                                                ) %>
                                                                <% } %>
                                                                    <span
                                                                        class="group-hover:text-brand-gold transition-colors">
                                                                        <%= platform.name %>
                                                                    </span>
                                            </a>
                                            <% }); %>
                                    </div>
                                </div>

                                <div>
                                    <div
                                        class="aspect-video bg-black rounded-lg overflow-hidden border-2 border-brand-gold/50">
                                        <iframe width="100%" height="100%" src="<%= game.trailerUrl %>" frameborder="0"
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                            allowfullscreen title="<%= game.title %> Trailer"></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Media Section -->
                <section id="media" class="py-20 bg-black">
                    <div class="container mx-auto px-4">
                        <div class="max-w-7xl mx-auto">
                            <h2 class="text-5xl font-bold text-brand-gold mb-10 tracking-wide uppercase">
                                Media
                            </h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                <% if (game.sections.media && game.sections.media.length> 0) { %>
                                    <% let imageIndex=0; %>
                                        <% game.sections.media.forEach((item, index)=> { %>
                                            <% if (item.type==='video' ) { %>
                                                <div
                                                    class="aspect-video bg-gray-900 rounded-lg overflow-hidden border-2 border-gray-800 hover:border-brand-gold transition-colors">
                                                    <iframe width="100%" height="100%" src="<%= item.url %>"
                                                        frameborder="0" allowfullscreen
                                                        title="<%= item.title %>"></iframe>
                                                </div>
                                                <% } else { %>
                                                    <div class="aspect-video bg-gray-900 rounded-lg overflow-hidden border-2 border-gray-800 hover:border-brand-gold transition-colors relative cursor-pointer"
                                                        onclick="openGallery(<%=imageIndex%>)">
                                                        <div
                                                            class="absolute inset-0 flex items-center justify-center z-0">
                                                            <div class="text-6xl opacity-30">üñºÔ∏è</div>
                                                        </div>
                                                        <img src="<%= item.url %>" alt="<%= item.title %>"
                                                            class="w-full h-full object-cover relative z-10"
                                                            onerror="this.style.display='none'"
                                                            onload="this.previousElementSibling.style.display='none'">
                                                    </div>
                                                    <% imageIndex++; %>
                                                        <% } %>
                                                            <% }); %>
                                                                <% } else { %>
                                                                    <p class="text-gray-400 col-span-full">Media coming
                                                                        soon...
                                                                    </p>
                                                                    <% } %>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Features Section -->
                <section id="features" class="py-0 bg-brand-purple">
                    <div class="grid md:grid-cols-2 items-stretch h-[calc(100vh-120px)]">
                        <div class="px-8 md:px-24 lg:px-32 py-20 flex flex-col justify-center">
                            <h2 class="text-5xl font-bold text-brand-gold mb-10 tracking-wide uppercase">
                                Features
                            </h2>
                            <ul class="space-y-5">
                                <% game.sections.features.forEach(feature=> { %>
                                    <li class="flex items-start text-white text-lg">
                                        <span class="text-brand-gold mr-4 mt-1">‚óè</span>
                                        <span>
                                            <%= feature %>
                                        </span>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>
                        <div class="relative overflow-hidden bg-gray-900 h-full">
                            <div class="absolute inset-0 flex items-center justify-center z-0">
                                <div class="text-6xl opacity-30">üñºÔ∏è</div>
                            </div>
                            <img src="<%= game.featureSideImage %>" alt="<%= game.title %> Screenshot"
                                class="w-full h-full object-cover relative z-10" onerror="this.style.display='none'" />
                        </div>
                    </div>
                </section>

                <!-- Extras Section -->
                <section id="extras" class="py-20 bg-black">
                    <div class="container mx-auto px-4">
                        <div class="max-w-7xl mx-auto">
                            <h2 class="text-5xl font-bold text-brand-gold mb-10 tracking-wide uppercase">
                                Extras
                            </h2>
                            <div
                                class="bg-gray-900 border-2 border-gray-800 hover:border-brand-gold transition-colors p-8 max-w-md">
                                <h3 class="text-2xl font-bold text-white mb-4 tracking-wide">Update Notes</h3>
                                <p class="text-gray-400 mb-6">Access in-depth notes on each of the games updates as they
                                    release.</p>
                                <a href="#"
                                    class="block w-full bg-gray-800 hover:bg-brand-purple text-white text-center py-4 font-bold uppercase tracking-wider border-2 border-gray-700 hover:border-brand-gold transition-all">
                                    Update Notes
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Details Section -->
                <section id="details" class="py-20 bg-gray-900">
                    <div class="container mx-auto px-4">
                        <div class="max-w-7xl mx-auto">
                            <div class="grid md:grid-cols-3 gap-8">
                                <div class="bg-black border-2 border-gray-800 p-6">
                                    <h3 class="text-sm text-gray-500 uppercase tracking-widest mb-3">Age Rating</h3>
                                    <p class="text-white font-bold text-2xl">
                                        <%= game.rating %>
                                    </p>
                                </div>
                                <div class="bg-black border-2 border-gray-800 p-6">
                                    <h3 class="text-sm text-gray-500 uppercase tracking-widest mb-3">Players</h3>
                                    <p class="text-white font-bold text-2xl">
                                        <%= game.players %>
                                    </p>
                                </div>
                                <div class="bg-black border-2 border-gray-800 p-6">
                                    <h3 class="text-sm text-gray-500 uppercase tracking-widest mb-3">Release Date</h3>
                                    <p class="text-white font-bold text-2xl">
                                        <%= game.releaseDate %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Back Link -->
                <section class="py-10 bg-black">
                    <div class="container mx-auto px-4 text-center">
                        <a href="/games"
                            class="text-brand-gold hover:text-white transition-colors uppercase text-sm tracking-widest font-bold">
                            ‚Üê Back to All Games
                        </a>
                    </div>
                </section>

                <!-- Platform Modal -->
                <div id="platform-modal" class="platform-modal">
                    <div class="relative bg-gray-900 border-4 border-brand-gold max-w-3xl w-full mx-4 p-12">
                        <button onclick="closePlatformModal()"
                            class="absolute top-6 right-6 text-white hover:text-brand-gold transition-colors"
                            style="font-size: 3rem; line-height: 1; font-weight: bold;">&times;</button>

                        <h2 class="text-4xl font-bold text-white mb-12 text-center tracking-wide uppercase">
                            Buy <%= game.title %> On:
                        </h2>

                        <div class="flex justify-center gap-8 flex-wrap">
                            <% game.platforms.forEach(platform=> { %>
                                <a href="<%= platform.url %>" target="_blank"
                                    class="flex flex-col items-center justify-center w-40 h-40 bg-gray-800 hover:bg-brand-purple border-2 border-gray-700 hover:border-brand-gold transition-all duration-300 transform hover:scale-110 group p-4">
                                    <% if (platform.name==='Steam' ) { %>
                                        <%- getIcon('steam', 'w-16 h-16 fill-current text-white group-hover:text-brand-gold transition-colors mb-2'
                                            ) %>
                                            <% } else if (platform.name==='itch.io' ) { %>
                                                <%- getIcon('itch', 'w-16 h-16 fill-current text-white group-hover:text-brand-gold transition-colors mb-2'
                                                    ) %>
                                                    <% } else { %>
                                                        <div
                                                            class="w-16 h-16 bg-brand-gold rounded-full flex items-center justify-center mb-2">
                                                            <span class="text-2xl text-black font-bold">
                                                                <%= platform.name.charAt(0) %>
                                                            </span>
                                                        </div>
                                                        <% } %>
                                                            <p
                                                                class="text-white font-bold text-center group-hover:text-brand-gold transition-colors">
                                                                <%= platform.name %>
                                                            </p>
                                </a>
                                <% }); %>
                        </div>
                    </div>
                </div>

                <script>
                    function openPlatformModal() {
                        const modal = document.getElementById('platform-modal');
                        modal.classList.add('active');
                        document.body.style.overflow = 'hidden';
                    }

                    function closePlatformModal() {
                        const modal = document.getElementById('platform-modal');
                        modal.classList.remove('active');
                        document.body.style.overflow = 'auto';
                    }

                    document.getElementById('platform-modal').addEventListener('click', function (e) {
                        if (e.target === this) {
                            closePlatformModal();
                        }
                    });

                    document.addEventListener('keydown', function (e) {
                        if (e.key === 'Escape') {
                            closePlatformModal();
                        }
                    });

                    // Set section nav top to main nav height and update on resize
                    const mainNav = document.getElementById('main-nav');
                    const sectionNav = document.getElementById('section-nav');

                    function updateSectionNavTop() {
                        if (mainNav && sectionNav) {
                            sectionNav.style.top = mainNav.offsetHeight + 'px';
                        }
                    }

                    // Initial call
                    updateSectionNavTop();

                    // Update on resize
                    window.addEventListener('resize', updateSectionNavTop);

                    document.querySelectorAll('.section-nav-link').forEach(link => {
                        link.addEventListener('click', function (e) {
                            e.preventDefault();
                            const targetId = this.getAttribute('href');
                            const targetSection = document.querySelector(targetId);
                            if (targetSection) {
                                const navHeight = document.getElementById('main-nav').offsetHeight;
                                const sectionNavHeight = document.getElementById('section-nav').offsetHeight;
                                const targetPosition = targetSection.offsetTop - navHeight - sectionNavHeight;
                                window.scrollTo({
                                    top: targetPosition,
                                    behavior: 'smooth'
                                });
                            }
                        });
                    });

                    // Check mobile compatibility for demo
                    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
                    const gameData = document.getElementById('game-data');
                    const demoMobileCompatible = gameData ? gameData.dataset.demoMobileCompatible === 'true' : true;
                    const demoSection = document.querySelector('.demo-section');

                    if (demoSection && isMobile && !demoMobileCompatible) {
                        demoSection.style.display = 'none';
                        // Also hide demo nav link
                        const demoNavLink = document.querySelector('a[href="#demo"]');
                        if (demoNavLink) {
                            demoNavLink.style.display = 'none';
                        }
                    }
                </script>

                <!-- Lightbox Modal -->
                <div id="lightbox-modal"
                    class="fixed inset-0 bg-black bg-opacity-95 z-50 hidden items-center justify-center">
                    <button onclick="closeLightbox()"
                        class="absolute top-4 right-4 text-white text-4xl hover:text-brand-gold transition-colors z-20">
                        ‚úï
                    </button>
                    <button onclick="prevImage()"
                        class="absolute left-4 top-1/2 -translate-y-1/2 text-white text-5xl hover:text-brand-gold transition-colors z-20">
                        ‚Äπ
                    </button>
                    <button onclick="nextImage()"
                        class="absolute right-4 top-1/2 -translate-y-1/2 text-white text-5xl hover:text-brand-gold transition-colors z-20">
                        ‚Ä∫
                    </button>
                    <img id="lightbox-image" src="" alt="Gallery Image"
                        class="w-auto h-auto max-w-[95vw] max-h-[95vh] md:h-[90vh] object-contain shadow-2xl mx-auto select-none">
                </div>

                <!-- Gallery Data Container -->
                <div id="gallery-data"
                    data-images="<%= JSON.stringify(game.sections.media.filter(m => m.type === 'image')) %>"
                    class="hidden"></div>

                <script>
                    // Gallery data from EJS
                    const dataElement = document.getElementById('gallery-data');
                    const mediaImages = dataElement ? JSON.parse(dataElement.dataset.images) : [];
                    let currentImageIndex = 0;

                    function openGallery(index) {
                        currentImageIndex = index;
                        updateLightboxImage();
                        const modal = document.getElementById('lightbox-modal');
                        modal.classList.remove('hidden');
                        modal.classList.add('flex');
                        document.body.style.overflow = 'hidden';
                    }

                    function closeLightbox() {
                        const modal = document.getElementById('lightbox-modal');
                        modal.classList.add('hidden');
                        modal.classList.remove('flex');
                        document.body.style.overflow = 'auto';
                    }

                    function nextImage() {
                        currentImageIndex = (currentImageIndex + 1) % mediaImages.length;
                        updateLightboxImage();
                    }

                    function prevImage() {
                        currentImageIndex = (currentImageIndex - 1 + mediaImages.length) % mediaImages.length;
                        updateLightboxImage();
                    }

                    function updateLightboxImage() {
                        const img = document.getElementById('lightbox-image');
                        img.src = mediaImages[currentImageIndex].url;
                        img.alt = mediaImages[currentImageIndex].title;
                    }

                    // Keyboard navigation
                    document.addEventListener('keydown', function (e) {
                        const modal = document.getElementById('lightbox-modal');
                        if (!modal.classList.contains('hidden')) {
                            if (e.key === 'Escape') closeLightbox();
                            if (e.key === 'ArrowRight') nextImage();
                            if (e.key === 'ArrowLeft') prevImage();
                        }
                    });

                    // Click outside to close
                    document.getElementById('lightbox-modal').addEventListener('click', function (e) {
                        if (e.target === this) {
                            closeLightbox();
                        }
                    });
                </script>

                <%- include('../partials/footer') %>