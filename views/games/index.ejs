<% const pageTitle='Games' ; %>
    <%- include('../partials/header') %>

        <!-- Games Header -->
        <section class="py-24 bg-gradient-to-b from-gray-900 to-black">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 tracking-wide uppercase">
                        Our Games
                    </h1>
                    <div class="w-24 h-1 bg-brand-gold mx-auto mb-8"></div>
                    <p class="text-xl text-gray-300">
                        Discover our collection of unique gaming experiences
                    </p>
                </div>
            </div>
        </section>

        <!-- Games Grid -->
        <section class="py-20 bg-black">
            <div class="container mx-auto px-4">
                <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-8">
                    <% games.forEach(game=> { %>
                        <a href="/games/<%= game.id %>"
                            class="group bg-gray-900 border-2 border-gray-800 hover:border-brand-gold transition-all duration-300 overflow-hidden">
                            <!-- Game Thumbnail -->
                            <div class="aspect-video bg-black overflow-hidden border-b-2 border-gray-800 group-hover:border-brand-gold transition-colors relative">
                                <div class="absolute inset-0 flex items-center justify-center z-0 bg-gradient-to-br from-gray-800 to-black">
                                    <div class="text-6xl opacity-30 group-hover:opacity-50 transition-opacity">ðŸŽ®</div>
                                </div>
                                <img src="<%= game.thumbnail %>" 
                                     alt="<%= game.title %>" 
                                     class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-300 relative z-10"
                                     onerror="this.style.display='none'">
                            </div>

                            <!-- Game Info -->
                            <div class="p-6">
                                <h3
                                    class="text-3xl font-bold text-white mb-2 group-hover:text-brand-gold transition-colors">
                                    <%= game.title %>
                                </h3>
                                <p class="text-brand-purple uppercase text-sm font-bold mb-3 tracking-wider">
                                    <%= game.genre %>
                                </p>
                                <p class="text-gray-400 leading-relaxed">
                                    <%= game.description %>
                                </p>
                            </div>
                        </a>
                        <% }); %>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>