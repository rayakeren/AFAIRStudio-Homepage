<% const pageTitle='Home' ; %>
    <%- include('partials/header') %>

        <!-- Hero Section -->
        <section class="relative bg-gradient-to-b from-gray-900 to-black py-32 md:py-48 overflow-hidden">
            <div
                class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-brand-purple/20 via-transparent to-transparent">
            </div>

            <div class="container mx-auto px-4 relative z-10">
                <div class="text-center max-w-5xl mx-auto">
                    <!-- Logo Only -->
                    <div class="mb-16 flex justify-center">
                        <img src="/images/afair-studio-logo-main.png" alt="A FAIR Studio" class="h-48 md:h-64">
                    </div>

                    <p class="text-xl md:text-2xl text-brand-gold font-bold mb-16 tracking-wider uppercase">
                        Tipping the Scales of Gameplay
                    </p>
                    <div class="flex flex-col sm:flex-row gap-6 justify-center">
                        <a href="/games" class="btn-primary text-lg uppercase tracking-wide">
                            Our Games
                        </a>
                        <a href="/about" class="btn-secondary text-lg uppercase tracking-wide">
                            About Us
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Featured Game Section -->
        <% if (featuredGame) { %>
            <section class="py-24 bg-black relative">
                <div class="absolute inset-0 bg-gradient-to-b from-transparent via-brand-purple/5 to-transparent"></div>

                <div class="container mx-auto px-4 relative z-10">
                    <div class="text-center mb-16">
                        <h2 class="text-5xl md:text-6xl text-white mb-4 tracking-wide font-bold">
                            FEATURED GAME
                        </h2>
                        <div class="w-24 h-1 bg-brand-gold mx-auto"></div>
                    </div>

                    <div class="max-w-6xl mx-auto">
                        <div class="grid md:grid-cols-5 gap-12 items-center">
                            <!-- Game Preview -->
                            <div class="md:col-span-3">
                                <div class="aspect-video bg-gray-900 rounded-lg border-2 border-brand-purple/50 overflow-hidden relative group game-card">
                                    <div class="absolute inset-0 flex items-center justify-center z-0">
                                        <div class="text-8xl opacity-20">ðŸŽ®</div>
                                    </div>
                                    <img src="<%= featuredGame.thumbnail %>" 
                                         alt="<%= featuredGame.title %>" 
                                         class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-500 relative z-10 game-image"
                                         onerror="this.style.display='none'">
                                </div>
                            </div>

                            <!-- Game Info -->
                            <div class="md:col-span-2 space-y-6">
                                <div>
                                    <h3 class="text-4xl font-bold text-brand-gold mb-2 tracking-wide">
                                        <%= featuredGame.title %>
                                    </h3>
                                    <p class="text-brand-purple uppercase text-sm tracking-widest font-bold">
                                        <%= featuredGame.genre %>
                                    </p>
                                </div>

                                <p class="text-gray-300 leading-relaxed">
                                    <%= featuredGame.description %>
                                </p>

                                <a href="/games/<%= featuredGame.id %>"
                                    class="btn-primary inline-block uppercase tracking-wide">
                                    Play Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <% } %>

                <!-- All Games Section -->
                <section class="py-24 bg-gray-900">
                    <div class="container mx-auto px-4">
                        <div class="text-center mb-16">
                            <h2 class="text-5xl md:text-6xl text-white mb-4 tracking-wide font-bold">
                                OUR GAMES
                            </h2>
                            <div class="w-24 h-1 bg-brand-gold mx-auto"></div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
                            <% gamesData.forEach(game=> { %>
                                <a href="/games/<%= game.id %>" class="group block game-card">
                                    <div
                                        class="bg-black border-2 border-gray-800 hover:border-brand-gold transition-all duration-300 overflow-hidden">
                                        <!-- Game Thumbnail -->
                                        <div class="aspect-video bg-black overflow-hidden border-b-2 border-gray-800 group-hover:border-brand-gold transition-colors relative">
                                            <div class="absolute inset-0 flex items-center justify-center z-0 bg-gradient-to-br from-gray-800 to-black">
                                                <div class="text-6xl opacity-30 group-hover:opacity-50 transition-opacity">ðŸŽ®</div>
                                            </div>
                                            <img src="<%= game.thumbnail %>" 
                                                 alt="<%= game.title %>" 
                                                 class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-300 relative z-10 game-image"
                                                 onerror="this.style.display='none'">
                                        </div>

                                        <!-- Game Info -->
                                        <div class="p-6">
                                            <h3
                                                class="text-2xl font-bold text-brand-gold mb-2 tracking-wide group-hover:text-white transition-colors">
                                                <%= game.title %>
                                            </h3>
                                            <p
                                                class="text-xs text-brand-purple uppercase tracking-widest font-bold mb-3">
                                                <%= game.genre %>
                                            </p>
                                            <p class="text-gray-400 text-sm leading-relaxed">
                                                <%= game.description %>
                                            </p>
                                        </div>
                                    </div>
                                </a>
                                <% }); %>
                        </div>

                        <div class="text-center mt-16">
                            <a href="/games" class="btn-secondary inline-block uppercase tracking-wide">
                                View All Games
                            </a>
                        </div>
                    </div>
                </section>

                <%- include('partials/footer') %>