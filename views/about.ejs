<% const pageTitle='About Us' ; %>
    <%- include('partials/header') %>

        <!-- About Hero -->
        <section class="py-24 bg-gradient-to-b from-gray-900 to-black">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <div class="mb-12">
                        <img src="/images/afair-studio-logo-main.png" alt="A FAIR Studio" class="h-32 mx-auto">
                    </div>
                    <h1 class="text-6xl md:text-7xl text-white mb-8 tracking-wide font-bold">
                        ABOUT US
                    </h1>
                    <div class="w-24 h-1 bg-brand-gold mx-auto mb-12"></div>
                    <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto">
                        A FAIR Studio is an indie team from Surabaya, Indonesia, born from a college project. Our name
                        is an acronym of our five members, and our logo, the scale, is our guide. We simply love making
                        balanced and engaging games together.
                    </p>
                </div>
            </div>
        </section>

        <!-- Team Members -->
        <section class="py-20 bg-black">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold text-white mb-16 tracking-wide text-center">
                    THE TEAM
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8 max-w-6xl mx-auto">
                    <% teamMembers.forEach(member=> { %>
                        <div
                            class="bg-gray-900 border-2 border-gray-800 hover:border-brand-gold transition-all duration-300 p-6 text-center group h-full flex flex-col">
                            <!-- Member Image -->
                            <div class="relative w-32 h-32 mx-auto mb-6">
                                <div
                                    class="absolute inset-0 bg-brand-gold rounded-full opacity-0 group-hover:opacity-20 transition-opacity blur-md">
                                </div>
                                <div class="absolute inset-0 flex items-center justify-center z-0">
                                    <div class="text-4xl opacity-30">ðŸ‘¤</div>
                                </div>
                                <img src="<%= member.image %>" alt="<%= member.name %>"
                                    class="w-32 h-32 rounded-full object-cover border-4 border-gray-800 group-hover:border-brand-gold transition-colors relative z-10 bg-gray-800"
                                    onerror="this.style.display='none'">
                            </div>

                            <div class="flex-grow flex flex-col">
                                <h3
                                    class="text-lg font-bold text-white mb-2 min-h-[3.5rem] flex items-center justify-center">
                                    <%= member.name %>
                                </h3>
                                <p class="text-sm text-brand-purple mb-6 uppercase tracking-wide font-semibold">
                                    <%= member.role %>
                                </p>

                                <!-- Social Links -->
                                <div class="flex justify-center space-x-3 mt-auto">
                                    <a href="<%= member.instagram %>" target="_blank"
                                        class="text-gray-400 hover:text-brand-gold transition-colors">
                                        <%- getIcon('instagram', 'w-5 h-5' ) %>
                                    </a>
                                    <a href="<%= member.linkedin %>" target="_blank"
                                        class="text-gray-400 hover:text-brand-gold transition-colors">
                                        <%- getIcon('linkedin', 'w-5 h-5' ) %>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>