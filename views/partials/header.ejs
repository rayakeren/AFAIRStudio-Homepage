        <button id="mobile-menu-btn" class="md:hidden text-white text-2xl">â˜°</button>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-3 border-t border-gray-800 pt-4">
        <a href="/"
          class="block text-gray-400 hover:text-white transition-colors duration-300 font-semibold uppercase text-sm tracking-wider">Home</a>
        <a href="/about"
          class="block text-gray-400 hover:text-white transition-colors duration-300 font-semibold uppercase text-sm tracking-wider">About</a>
        <a href="/games"
          class="block text-gray-400 hover:text-white transition-colors duration-300 font-semibold uppercase text-sm tracking-wider">Games</a>
        <a href="/contact"
          class="block text-gray-400 hover:text-white transition-colors duration-300 font-semibold uppercase text-sm tracking-wider">Contact</a>
        <a href="/privacy"
          class="block text-gray-400 hover:text-white transition-colors duration-300 font-semibold uppercase text-sm tracking-wider">Privacy
          Policy</a>
        <a href="/tos"
          class="block text-gray-400 hover:text-white transition-colors duration-300 font-semibold uppercase text-sm tracking-wider">Terms
          of Service</a>
