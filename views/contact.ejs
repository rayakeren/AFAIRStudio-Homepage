<% const pageTitle='Contact Us' ; %>
    <%- include('partials/header') %>

        <!-- Contact Header -->
        <section class="py-24 bg-gradient-to-b from-gray-900 to-black">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 tracking-wide">
                        GET IN TOUCH
                    </h1>
                    <div class="w-24 h-1 bg-brand-gold mx-auto mb-8"></div>
                    <p class="text-xl text-gray-300">
                        We'd love to hear from you! Whether you have feedback, questions, or just want to say hi.
                    </p>
                </div>
            </div>
        </section>

        <!-- Contact Content -->
        <section class="py-16 bg-black">
            <div class="container mx-auto px-4">
                <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-12">

                    <!-- Contact Info -->
                    <div class="space-y-8">
                        <div>
                            <h2 class="text-3xl font-bold text-white mb-8 tracking-wide uppercase">
                                Studio Info
                            </h2>
                            <div class="space-y-6">
                                <div class="bg-gray-900 border-2 border-gray-800 p-6">
                                    <h3 class="text-xl text-brand-gold mb-3 tracking-wide uppercase font-bold">Location
                                    </h3>
                                    <p class="text-gray-300">Surabaya, Indonesia</p>
                                </div>

                                <div class="bg-gray-900 border-2 border-gray-800 p-6">
                                    <h3 class="text-xl text-brand-gold mb-3 tracking-wide uppercase font-bold">Email
                                    </h3>
                                    <a href="mailto:studioafair@gmail.com"
                                        class="text-gray-300 hover:text-brand-gold transition-colors">
                                        studioafair@gmail.com
                                    </a>
                                </div>

                                <div class="bg-gray-900 border-2 border-gray-800 p-6">
                                    <h3 class="text-xl text-brand-gold mb-3 tracking-wide uppercase font-bold">Hours
                                    </h3>
                                    <p class="text-gray-300">Monday - Friday</p>
                                    <p class="text-gray-400 text-sm">9:00 AM - 5:00 PM (GMT+7)</p>
                                </div>
                            </div>
                        </div>

                        <!-- Social Links -->
                        <div>
                            <h2 class="text-3xl font-bold text-white mb-8 tracking-wide uppercase">
                                Follow Us
                            </h2>
                            <div class="space-y-4">
                                <a href="https://instagram.com/studioafair" target="_blank"
                                    class="flex items-center space-x-4 bg-gray-900 border-2 border-gray-800 hover:border-brand-gold p-4 transition-all group">
                                    <%- getIcon('instagram', 'w-6 h-6 fill-current text-gray-400 group-hover:text-brand-gold transition-colors'
                                        ) %>
                                        <div>
                                            <p
                                                class="font-semibold text-white group-hover:text-brand-gold transition-colors">
                                                Instagram</p>
                                            <p class="text-sm text-gray-400">@studioafair</p>
                                        </div>
                                </a>

                                <a href="https://discord.gg/hWJfE8d8gv" target="_blank"
                                    class="flex items-center space-x-4 bg-gray-900 border-2 border-gray-800 hover:border-brand-gold p-4 transition-all group">
                                    <%- getIcon('discord', 'w-6 h-6 fill-current text-gray-400 group-hover:text-brand-gold transition-colors'
                                        ) %>
                                        <div>
                                            <p
                                                class="font-semibold text-white group-hover:text-brand-gold transition-colors">
                                                Discord</p>
                                            <p class="text-sm text-gray-400">Join our community</p>
                                        </div>
                                </a>

                                <a href="https://youtube.com/@afairstudio" target="_blank"
                                    class="flex items-center space-x-4 bg-gray-900 border-2 border-gray-800 hover:border-brand-gold p-4 transition-all group">
                                    <%- getIcon('youtube', 'w-6 h-6 fill-current text-gray-400 group-hover:text-brand-gold transition-colors'
                                        ) %>
                                        <div>
                                            <p
                                                class="font-semibold text-white group-hover:text-brand-gold transition-colors">
                                                YouTube</p>
                                            <p class="text-sm text-gray-400">@afairstudio</p>
                                        </div>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div>
                        <h2 class="text-3xl font-bold text-white mb-8 tracking-wide uppercase">
                            Send A Message
                        </h2>
                        <form class="space-y-6 bg-gray-900 border-2 border-gray-800 p-8">
                            <div>
                                <label for="name"
                                    class="block text-gray-300 font-bold mb-2 uppercase text-sm tracking-wider">Your
                                    Name</label>
                                <input type="text" id="name" name="name"
                                    class="w-full px-4 py-3 bg-black border-2 border-gray-800 focus:border-brand-gold focus:outline-none text-white transition-colors"
                                    placeholder="John Doe" required>
                            </div>

                            <div>
                                <label for="email"
                                    class="block text-gray-300 font-bold mb-2 uppercase text-sm tracking-wider">Your
                                    Email</label>
                                <input type="email" id="email" name="email"
                                    class="w-full px-4 py-3 bg-black border-2 border-gray-800 focus:border-brand-gold focus:outline-none text-white transition-colors"
                                    placeholder="john@example.com" required>
                            </div>

                            <div>
                                <label for="subject"
                                    class="block text-gray-300 font-bold mb-2 uppercase text-sm tracking-wider">Subject</label>
                                <input type="text" id="subject" name="subject"
                                    class="w-full px-4 py-3 bg-black border-2 border-gray-800 focus:border-brand-gold focus:outline-none text-white transition-colors"
                                    placeholder="Game Feedback" required>
                            </div>

                            <div>
                                <label for="message"
                                    class="block text-gray-300 font-bold mb-2 uppercase text-sm tracking-wider">Message</label>
                                <textarea id="message" name="message" rows="6"
                                    class="w-full px-4 py-3 bg-black border-2 border-gray-800 focus:border-brand-gold focus:outline-none text-white transition-colors resize-none"
                                    placeholder="Tell us what's on your mind..." required></textarea>
                            </div>

                            <button type="submit" class="btn-primary w-full uppercase tracking-wide">
                                Send Message
                            </button>

                            <p class="text-sm text-gray-500 text-center">
                                We typically respond within 24-48 hours.
                            </p>
                        </form>
                    </div>

                </div>
            </div>
        </section>

        <%- include('partials/footer') %>